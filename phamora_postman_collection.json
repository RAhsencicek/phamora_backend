	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Eğer login isteği ise, yanıttan gelen token'ı kaydet",
					"pm.test(\"Auto-save auth token from login response\", function () {",
					"    if (pm.request.url.toString().includes('/api/auth/login')) {",
					"        pm.sendRequest({",
					"            url: pm.variables.get(\"baseUrl\") + '/api/auth/login',",
					"            method: 'POST',",
					"            header: { 'Content-Type': 'application/json' },",
					"            body: {",
					"                mode: 'raw',",
					"                raw: JSON.stringify({",
					"                    pharmacistId: pm.variables.get(\"pharmacistId\"),",
					"                    password: \"123456\"",
					"                })",
					"            }",
					"        }, function (err, res) {",
					"            if (!err && res.json().token) {",
					"                pm.variables.set(\"authToken\", res.json().token);",
					"                console.log(\"Token kaydedildi: \" + res.json().token);",
					"            }",
					"        });",
					"    }",
					"});"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Otomatik başarı kontrolü",
					"pm.test(\"Başarılı yanıt kodu alındı\", function () {",
					"    pm.response.to.have.status(200);",
					"});",
					"",
					"// Giriş yanıtı kontrolü",
					"if (pm.request.url.toString().includes('/api/auth/login')) {",
					"    pm.test(\"Giriş başarılı ve token alındı\", function () {",
					"        var jsonData = pm.response.json();",
					"        pm.expect(jsonData.token).to.exist;",
					"        pm.expect(jsonData.user).to.exist;",
					"        ",
					"        // Token'ı koleksiyon değişkenine kaydet",
					"        if (jsonData.token) {",
					"            pm.collectionVariables.set(\"authToken\", jsonData.token);",
					"            console.log(\"Token kaydedildi: \" + jsonData.token);",
					"        }",
					"    });",
					"}"
				]
			}
		}
